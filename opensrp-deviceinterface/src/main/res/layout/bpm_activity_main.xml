<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="org.smartregister.deviceinterface.device.BpmTestMainActivity">

    <TextView
        android:id="@+id/tv_sistole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/sistole"
        android:textColor="@color/pink"
        android:textSize="150sp" />

    <TextView
        android:id="@+id/tv_diastole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sistole"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/diastole"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="150sp" />
</RelativeLayout>