<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="org.nusabit.bpmsample.MainActivity">

    <at.markushi.ui.CircleButton
        android:id="@+id/iv_start_stop"
        android:layout_width="200dip"
        android:layout_height="200dip"
        app:cb_color="#2ed1a2"
        app:cb_pressedRingWidth="8dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="START"
        android:visibility="gone"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/iv_cdc"
        android:layout_width="200dip"
        android:layout_height="200dip"
        app:cb_color="#2ed1a2"
        app:cb_pressedRingWidth="8dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="CONNECT"/>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_start_stop"
        android:layout_alignLeft="@id/iv_start_stop"
        android:layout_alignRight="@id/iv_start_stop"
        android:layout_alignTop="@id/iv_start_stop"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="START"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_cdc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_cdc"
        android:layout_alignLeft="@id/iv_cdc"
        android:layout_alignRight="@id/iv_cdc"
        android:layout_alignTop="@id/iv_cdc"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="CONNECT"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/bottom_navigation_main"
        />
</RelativeLayout>
